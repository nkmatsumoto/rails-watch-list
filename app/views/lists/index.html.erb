<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path("out-2.webp") %>)">
  <div class="container">
    <h1>Movie Lists</h1>
    <br>
    <%= link_to "Create a movie list", new_list_path, class: "btn btn-flat" %>
  </div>
</div>
<div class="cards mt-3">
  <% @lists.each do |list| %>
    <div class="item card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : image_path('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU') %>)">
      <%= list.name %>
    </div>

    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.get_image_url %>)" >
      <%= link_to list.name, list_path(list), class: "text-decoration-none link-light" %>
    </div>
  <% end %>
</div>
